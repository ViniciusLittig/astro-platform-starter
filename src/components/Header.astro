---
// Menu personalizado para VA Soluções em Tecnologia
const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Serviços', href: '/servicos' },
    { linkText: 'Sobre Nós', href: '/sobre' },
    { linkText: 'Contato', href: '/contato' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <span class="text-3xl font-extrabold tracking-tight bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent"> VA </span>

    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1 text-lg font-medium">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-2 py-1 sm:px-3 sm:py-2 hover:text-primary transition-colors">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
